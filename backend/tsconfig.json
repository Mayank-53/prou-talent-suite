{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",

    "strict": true,
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },

  "include": [
    "src/**/*",
    "../shared/**/*"
  ],

  "exclude": ["node_modules", "dist"]
}
